//- Все примеси в этом файле должны начинаться c имени блока (landing-header)

mixin landing-header(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +landing-header('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' landing-header--' + modsList[i].trim();
      }
    }

  .landing-header(class=allMods)&attributes(attributes)
    +logo()
    +btn()
